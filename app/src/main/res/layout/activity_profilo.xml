<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProfilo">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="84dp"
        android:text="Profilo"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homedaprofilo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homedaprofilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeprofiloutenteprincipale"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homedaprofilo" />

    <Button
        android:id="@+id/cambianomeutente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cambianome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nomeprofiloutenteprincipale"
        app:layout_constraintTop_toTopOf="@+id/nomeprofiloutenteprincipale" />

    <ImageView
        android:id="@+id/fotoprofiloutenteprincipale"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/nomeprofiloutenteprincipale"
        app:layout_constraintStart_toStartOf="@+id/nomeprofiloutenteprincipale"
        app:layout_constraintTop_toBottomOf="@+id/nomeprofiloutenteprincipale"
        tools:srcCompat="@mipmap/iconuser" />

    <Button
        android:id="@+id/cambiafotoutente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cambiafoto"
        app:layout_constraintEnd_toEndOf="@+id/cambianomeutente"
        app:layout_constraintTop_toTopOf="@+id/fotoprofiloutenteprincipale" />

</androidx.constraintlayout.widget.ConstraintLayout>