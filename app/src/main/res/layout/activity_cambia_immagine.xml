<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CambiaImmagineActivity">

    <Button
        android:id="@+id/tornaaProfilodaCambiaImmagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scrittacambiaimmagine"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:text="cambia immagine"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tornaaProfilodaCambiaImmagine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/immagineprofilocambia"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrittacambiaimmagine"
        tools:srcCompat="@mipmap/iconuser" />

    <Button
        android:id="@+id/invianuovaimmagineprofilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invia"
        app:layout_constraintEnd_toEndOf="@+id/immagineprofilocambia"
        app:layout_constraintTop_toBottomOf="@+id/immagineprofilocambia" />

    <TextView
        android:id="@+id/erroremessaggioinviaimmagine"
        android:layout_width="186dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="@+id/immagineprofilocambia"
        app:layout_constraintStart_toStartOf="@+id/immagineprofilocambia"
        app:layout_constraintTop_toBottomOf="@+id/invianuovaimmagineprofilo" />
</androidx.constraintlayout.widget.ConstraintLayout>