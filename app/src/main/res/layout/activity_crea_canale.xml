<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreaCanaleActivity">

    <EditText
        android:id="@+id/nomeCanale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="nome canale"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/scrittaNomecanale"
        app:layout_constraintStart_toStartOf="@+id/scrittaNomecanale"
        app:layout_constraintTop_toBottomOf="@+id/scrittaNomecanale" />

    <TextView
        android:id="@+id/scrittaNomecanale"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:layout_marginTop="136dp"
        android:text="Nome del canale"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tornaaScrividaCreaCanale" />

    <Button
        android:id="@+id/tornaaScrividaCreaCanale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inviacanale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nomeCanale"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errormessagecreacanale" />

    <TextView
        android:id="@+id/errormessagecreacanale"
        android:layout_width="215dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="@+id/nomeCanale"
        app:layout_constraintStart_toStartOf="@+id/nomeCanale"
        app:layout_constraintTop_toBottomOf="@+id/nomeCanale" />
</androidx.constraintlayout.widget.ConstraintLayout>