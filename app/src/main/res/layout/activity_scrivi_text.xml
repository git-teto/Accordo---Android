<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScriviTextActivity">

    <EditText
        android:id="@+id/textdainviare"
        android:layout_width="289dp"
        android:layout_height="226dp"
        android:ems="10"
        android:hint="max 150 caratteri"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tornaacanaledascrivitext" />

    <TextView
        android:id="@+id/alert"
        android:layout_width="289dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="@+id/textdainviare"
        app:layout_constraintStart_toStartOf="@+id/textdainviare"
        app:layout_constraintTop_toBottomOf="@+id/textdainviare" />

    <Button
        android:id="@+id/inviatextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invia"
        app:layout_constraintEnd_toEndOf="@+id/textdainviare"
        app:layout_constraintTop_toBottomOf="@+id/alert" />

    <Button
        android:id="@+id/tornaacanaledascrivitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>